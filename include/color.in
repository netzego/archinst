
readonly ta_none="$(tput sgr0 2> /dev/null || true)"

color_init() {
    readonly ta_bold="$(tput bold 2> /dev/null || true)"
    printf '%b' "$ta_none"
    readonly fg_black="$(tput setaf 0 2 2> /dev/null || true)"
    printf '%b' "$ta_none"
    readonly fg_blue="$(tput setaf 0 4 2> /dev/null || true)"
    printf '%b' "$ta_none"
}

